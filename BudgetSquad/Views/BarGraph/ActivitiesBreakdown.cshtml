<!DOCTYPE HTML>
<html>
<head>
    <script>
window.onload = function() {

var chart = new CanvasJS.Chart("chartContainer", {
	animationEnabled: true,
	title: {
		text: "Breakdown of Types of Activites"
	},
	data: [{
		type: "pie",
		startAngle: 240,
		yValueFormatString: "##0.00\"%\"",
		indexLabel: "{label} {y}",
		dataPoints: [
			{y: @ViewBag.foodDrink, label: "Food/Drink"},
			{y: @ViewBag.entertainment, label: "Entertainment"},
			{y: @ViewBag.leisure, label: "Leisure"},
			
		]
	}]
});
chart.render();

}
    </script>
</head>
<body>
    <div id="chartContainer" style="height: 300px; width: 100%;"></div>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</body>
</html>
<p>
